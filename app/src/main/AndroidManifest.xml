<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.code19.safe"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.write_sms" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bw"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".SjfdActivity" />
        <activity android:name=".SjfdSetup1Activity" />
        <activity android:name=".SjfdSetup2Activity" />
        <activity android:name=".SjfdSetup3Activity" />
        <activity android:name=".SjfdSetup4Activity" />
        <activity android:name=".SjfdSetup5Activity" />
        <activity android:name=".ContactsActivity" />
        <!-- 如下是优化项，优化完要删除 TODO -->
        <activity android:name=".ContactsActivity2" />
        <activity android:name=".CallSmsSafeActivity" />
        <activity android:name=".BlackListEditActivity" />
        <activity android:name=".ToolsActivity" />
        <activity android:name=".NumberAddressActivity" />
        <activity android:name=".NormalNumberActivity" />
        <activity android:name=".AppManagerActivity" />
        <activity android:name=".ProcessManagerActivity" />
        <activity android:name=".VirusCleanManagerActivity" />
        <activity android:name=".AppLockActivity" />
        <activity android:name=".CleanCacheActivity" />
        <!-- 激活管理员receiver -->
        <receiver
            android:name=".receiver.SafeAdminReceiver"
            android:description="@string/device_admin_description"
            android:label="@string/device_admin"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        <!-- 重启手机receiver -->
        <receiver android:name=".receiver.BootCompletedReceiver">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!--接收短信的receiver，4.4以后需要的权限更多-->
        <receiver
            android:name=".receiver.smsReceiver"
            android:permission="android.permission.BROADCAST_SMS">
            <action android:name="android.provider.Telephony.SMS_RECEIVER" />
        </receiver>
        <!--桌面小组件的接收者-->
        <receiver android:name=".receiver.SafeWidgetReceiver">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/safe_appwidget_info" />
        </receiver>
        <!--短信监听通过服务来做-->

        <!--黑名单，监听短信，-->
        <service android:name=".service.CallSmsSafeService" />
        <!--归属地查询，监听来电-->
        <service android:name=".service.NumberAddressService" />
        <!--定位服务-->
        <service android:name=".service.GPSService" />
        <!--保护服务-->
        <service android:name=".service.ProtectingService" />
    </application>

</manifest>
