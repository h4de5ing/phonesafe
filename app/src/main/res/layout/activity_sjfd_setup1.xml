<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/setupTitleSytel"
        android:text="1.欢迎使用手机防盗"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/NormalTextViewSytel"
            android:text="您的手机防盗卫士："/>

        <TextView
            style="@style/SetupTextViewStyle"
            android:text="SIM卡变更报警"/>

        <TextView
            style="@style/SetupTextViewStyle"
            android:text="GPS追踪"/>

        <TextView
            style="@style/SetupTextViewStyle"
            android:text="远程锁屏"/>

        <TextView
            style="@style/SetupTextViewStyle"
            android:text="远程销毁数据"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            style="@style/setupImageStyle"
            android:src="@mipmap/step_1"/>

        <Button
            style="@style/setupButtonNext"/>
    </RelativeLayout>

</LinearLayout>