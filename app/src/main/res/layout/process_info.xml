<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/process_item_iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/process_item_iv_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/process_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进程名字或包名"/>

        <TextView
            android:id="@+id/process_item_tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进程占用内存"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/process_item_cb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

</RelativeLayout>