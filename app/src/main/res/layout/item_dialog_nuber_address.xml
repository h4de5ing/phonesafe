<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_dialog_na_iv_icon"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:src="@drawable/toast_address_normal" />

    <TextView
        android:id="@+id/item_dialog_na_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_dialog_na_iv_icon"
        android:text="半透明" />

    <ImageView
        android:id="@+id/item_dialog_na_iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_selected" />
</RelativeLayout>