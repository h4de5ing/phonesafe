<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:code19="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/titlebarStyle"
        android:text="常用工具" />

    <TextView
        android:id="@+id/tools_tv_numberaddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="归属地查询"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tools_tv_normalnumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="常用号码查询"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tools_tv_bakupsms"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="短信备份"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tools_tv_restore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="短信还原"
        android:textSize="20sp" />

    <com.code19.safe.view.SettingItemView
        android:id="@+id/tools_tv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        code19:sivBackground="last"
        code19:sivTitle="程序锁"
        code19:sivToggle="false" />
</LinearLayout>